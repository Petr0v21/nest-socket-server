generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(uuid())
  telegramId String  @unique
  username   String?
  fullname   String
  avatar     String?
  balance    Int     @default(100)

  exp   Int      @default(0)
  liga  LigaEnum @default(BRONZE)
  level Int      @default(1)

  games                 Game[]
  provablyFairUserSeeds ProvablyFairUserSeeds[]
  bets                  Bet[]
  leaders               Leader[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Game {
  id           String   @id @unique @default(uuid())
  isWon        Boolean  @default(false)
  sideSelected CoinSide
  sideResult   CoinSide

  userId String
  User   User   @relation(fields: [userId], references: [id])

  bet       Bet?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Bet {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  settledAt DateTime?
  userId    String
  gameId    String    @unique
  amount    Float
  payout    Float     @default(0)
  user      User      @relation(fields: [userId], references: [id])
  game      Game      @relation(fields: [gameId], references: [id])

  betData Json @default("{}")
}

model ProvablyFairUserSeeds {
  id               String   @id @unique @default(uuid())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  userId           String
  serverSeed       String
  clientSeed       String
  hashedServerSeed String
  nonce            Int      @default(1)
  isActive         Boolean  @default(true)
  user             User     @relation(fields: [userId], references: [id])
}

model LeaderBoard {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  status LeaderBoardStatus @default(PENDING)

  startDate DateTime
  endDate   DateTime

  rewards LeaderBoardReward[]
  leaders Leader[]
}

model LeaderBoardReward {
  id     String @id @default(uuid())
  order  Int
  amount Float

  status RewardStatus @default(PENDING)

  leaderBoardId String
  leaderBoard   LeaderBoard @relation(fields: [leaderBoardId], references: [id])

  leaderId String?
  leader   Leader?
}

model Leader {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  amount Float

  userId String
  user   User   @relation(fields: [userId], references: [id])

  leaderBoardId String
  leaderBoard   LeaderBoard @relation(fields: [leaderBoardId], references: [id])

  rewardId String?            @unique
  reward   LeaderBoardReward? @relation(fields: [rewardId], references: [id])
}

enum CoinSide {
  HEADS
  TAILS
}

enum RewardStatus {
  SUCCESS
  ERROR
  PENDING
}

enum LeaderBoardStatus {
  CLOSED
  ACTIVE
  PENDING
}

enum LigaEnum {
  BRONZE
  SILVER
  GOLD
  PLATINUM
  DIAMOND
}
